{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "ignoreDeprecations": "5.0"
  },
  "include": ["**/*.ts", "types/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "../frontend_app/solana-agent-kit"
  ]
} 